@model IEnumerable<DNS_Test.Models.Employee>
    <div class="head">
        <h4>Иерархия руководства</h4>
        <button id="closeButton" class="btn btn-primary">Закрыть</button>
        Количество: @Model.Count()
    </div>
<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chief)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Post)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @if (item.Chief == null)
                    {
                        @Html.Label("Отсутствует");
                    }
                    else
                    {
                        @Html.Label(item.Chief.Name);
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
